@section Scripts{
<script>
  document.getElementById("ppc_support").addEventListener("click", function () {
    Goftino.toggle();
  });

  function dataBeginPost() {
    $("#ppc_request_button .indicator-label").hide();
    $("#ppc_request_button .indicator-progress").show();
    setTimeout(function () {
      $("#ppc_request_button .indicator-label").show();
      $("#ppc_request_button .indicator-progress").hide();
    }, 3000);
  }
</script>
