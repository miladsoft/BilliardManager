@model User
@inject IUsersPhotoService PhotoService
@{
    var photoUrl = PhotoService.GetUserPhotoUrl(Model.PhotoFileName);
}

<div class="d-flex mb-5">
    <div class="symbol symbol-45px me-5">
        <img src="@photoUrl" alt="@Model.DisplayName">
    </div>
    <div class="d-flex flex-column flex-row-fluid">
        <div class="d-flex align-items-center flex-wrap mb-1">
            <a href="#" class="text-gray-800 text-hover-primary fw-bolder me-2">@Model.DisplayName</a>
            <span class="text-gray-400 fw-bold fs-7">@ViewData["Date"]</span>
        </div>
        <span class="text-gray-800 fs-7 fw-normal pt-1">
            @ViewData["Text"]
        </span>
    </div>
</div>