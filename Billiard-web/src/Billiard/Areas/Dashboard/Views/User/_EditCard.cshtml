@model EditCardViewModel
<partial name="_CustomValidationSummary" />
<form asp-action="EditCard" method="post">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <h5 class="modal-title">ویرایش شماره کارت</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>


            <div class="modal-body">
                <input asp-for="Id" />

                <div class="form-group row mb-5">
                    <label asp-for="CardNumber" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">
                        <input asp-for="CardNumber" class="form-control" />
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-5">
                    <label asp-for="BankName" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">
                        <input asp-for="BankName" class="form-control" />
                        <span asp-validation-for="BankName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-5">
                    <label asp-for="CardOwner" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">
                        <input asp-for="CardOwner" class="form-control" />
                        <span asp-validation-for="CardOwner" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-5">
                    <label asp-for="CardStatus" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">
                        <select asp-for="CardStatus" asp-items="Html.GetEnumSelectList<CardStatus>()"
                            class="form-select form-select-solid fw-bolder js-select2"></select>

                        <span asp-validation-for="CardStatus" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-5">
                    <label asp-for="Description" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">
                        <textarea asp-for="Description" class="form-control" ></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="submit">ثبت</button>
                <button class="btn btn btn-secondary" data-bs-dismiss="modal" aria-hidden="true">انصراف</button>
            </div>
        </div>
    </div>
</form>

<script src="~/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        $('.js-select2').select2();
    });
</script>
