@model UserItemViewModel
@inject IUsersPhotoService PhotoService

@{
    var user = Model.User;
    var UserId = User.Identity.GetUserId();
    var photoUrl = PhotoService.GetUserPhotoUrl(user.PhotoFileName);
}
<div class="card mb-5 mb-xl-10">
    <div class="card-body pt-9 pb-0">
        <div class="d-flex flex-wrap flex-sm-nowrap mb-3">
            <div class="me-7 mb-4">
                <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                    <img src="@photoUrl" alt="@user.DisplayName" />
                    <div
                        class="position-absolute translate-middle bottom-0 start-100 mb-6 bg-success rounded-circle border border-4 border-white h-20px w-20px">
                    </div>
                </div>
            </div>
            <div class="flex-grow-1">
                <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                    <div class="d-flex flex-column">
                        <div class="d-flex align-items-center mb-2">
                            <a class="text-gray-800 text-hover-primary fs-2 fw-bolder me-1" asp-action="Index"
                                asp-controller="User" asp-route-id="@user.Id">@user.DisplayName</a>

                            @if (user.IsBlueTick)
                            {
                                <span class="svg-icon svg-icon-1 svg-icon-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24"
                                    version="1.1">
                                        <path
                                        d="M10.0813 3.7242C10.8849 2.16438 13.1151 2.16438 13.9187 3.7242V3.7242C14.4016 4.66147 15.4909 5.1127 16.4951 4.79139V4.79139C18.1663 4.25668 19.7433 5.83365 19.2086 7.50485V7.50485C18.8873 8.50905 19.3385 9.59842 20.2758 10.0813V10.0813C21.8356 10.8849 21.8356 13.1151 20.2758 13.9187V13.9187C19.3385 14.4016 18.8873 15.491 19.2086 16.4951V16.4951C19.7433 18.1663 18.1663 19.7433 16.4951 19.2086V19.2086C15.491 18.8873 14.4016 19.3385 13.9187 20.2758V20.2758C13.1151 21.8356 10.8849 21.8356 10.0813 20.2758V20.2758C9.59842 19.3385 8.50905 18.8873 7.50485 19.2086V19.2086C5.83365 19.7433 4.25668 18.1663 4.79139 16.4951V16.4951C5.1127 15.491 4.66147 14.4016 3.7242 13.9187V13.9187C2.16438 13.1151 2.16438 10.8849 3.7242 10.0813V10.0813C4.66147 9.59842 5.1127 8.50905 4.79139 7.50485V7.50485C4.25668 5.83365 5.83365 4.25668 7.50485 4.79139V4.79139C8.50905 5.1127 9.59842 4.66147 10.0813 3.7242V3.7242Z"
                                        fill="#00A3FF" />
                                        <path class="permanent"
                                        d="M14.8563 9.1903C15.0606 8.94984 15.3771 8.9385 15.6175 9.14289C15.858 9.34728 15.8229 9.66433 15.6185 9.9048L11.863 14.6558C11.6554 14.9001 11.2876 14.9258 11.048 14.7128L8.47656 12.4271C8.24068 12.2174 8.21944 11.8563 8.42911 11.6204C8.63877 11.3845 8.99996 11.3633 9.23583 11.5729L11.3706 13.4705L14.8563 9.1903Z"
                                        fill="white" />
                                    </svg>
                                </span>
                            }



                        </div>
                        <div class="d-flex flex-wrap fw-bold fs-6 mb-4 pe-2">
                            <a href="#" class="d-flex align-items-center text-gray-400 text-hover-primary mb-2">
                                <span class="svg-icon svg-icon-4 me-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px"
                                        viewBox="0 0 24 24" version="1.1">
                                        <path
                                            d="M11.575,21.2 C6.175,21.2 2.85,17.4 2.85,12.575 C2.85,6.875 7.375,3.05 12.525,3.05 C17.45,3.05 21.125,6.075 21.125,10.85 C21.125,15.2 18.825,16.925 16.525,16.925 C15.4,16.925 14.475,16.4 14.075,15.65 C13.3,16.4 12.125,16.875 11,16.875 C8.25,16.875 6.85,14.925 6.85,12.575 C6.85,9.55 9.05,7.1 12.275,7.1 C13.2,7.1 13.95,7.35 14.525,7.775 L14.625,7.35 L17,7.35 L15.825,12.85 C15.6,13.95 15.85,14.825 16.925,14.825 C18.25,14.825 19.025,13.725 19.025,10.8 C19.025,6.9 15.95,5.075 12.5,5.075 C8.625,5.075 5.05,7.75 5.05,12.575 C5.05,16.525 7.575,19.1 11.575,19.1 C13.075,19.1 14.625,18.775 15.975,18.075 L16.8,20.1 C15.25,20.8 13.2,21.2 11.575,21.2 Z M11.4,14.525 C12.05,14.525 12.7,14.35 13.225,13.825 L14.025,10.125 C13.575,9.65 12.925,9.425 12.3,9.425 C10.65,9.425 9.45,10.7 9.45,12.375 C9.45,13.675 10.075,14.525 11.4,14.525 Z"
                                            fill="#000000" />
                                    </svg>
                                </span>
                                @user.Email
                            </a>
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-wrap flex-stack">
                    <div class="d-flex flex-column flex-grow-1 pe-8">
                        <div class="d-flex flex-wrap">
                            <div class="border border-gray-300 border-dashed rounded  py-3 px-4 me-6 mb-3">
                                <div class="d-flex align-items-center">

                                    <div class="fs-2 fw-bolder" data-ppc-countup="true" data-ppc-countup-value="458">0
                                    </div>

                                </div>
                                <div class="fw-bold fs-6 text-gray-400"> پست</div>
                            </div>

                            <div class="border border-gray-300 border-dashed rounded  py-3 px-4 me-6 mb-3">
                                <a class="menu-link" asp-controller="Social" asp-action="Followers"
                                    asp-area="@AreaConstants.DashboardArea">

                                    <div class="d-flex align-items-center">

                                        <div class="fs-2 fw-bolder" data-ppc-countup="true" data-ppc-countup-value="12">
                                            0</div>

                                    </div>
                                    <div class="fw-bold fs-6 text-gray-400"> دنبال کنندگان</div>
                                </a>
                            </div>

                            <div class="border border-gray-300 border-dashed rounded  py-3 px-4 me-6 mb-3">
                                <a class="menu-link" asp-controller="Social" asp-action="Following"
                                    asp-area="@AreaConstants.DashboardArea">

                                    <div class="d-flex align-items-center">

                                        <div class="fs-2 fw-bolder" data-ppc-countup="true" data-ppc-countup-value="52">
                                            0</div>

                                    </div>
                                    <div class="fw-bold fs-6 text-gray-400"> دنبال شوندگان</div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center w-200px w-sm-300px flex-column mt-3">
                        <div class="d-flex justify-content-between w-100 mt-auto mb-2">
                            <span class="fw-bold fs-6 text-gray-400">تکمیل مشخصات</span>
                            <span class="fw-bolder fs-6">60%</span>
                        </div>
                        <div class="h-5px mx-3 w-100 bg-light mb-3">
                            <div class="bg-success rounded h-5px" role="progressbar" style="width: 60%;"
                                aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex overflow-auto h-55px">
            <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bolder flex-nowrap"
                id="myTab">
                @if (User.IsInRole(ConstantRoles.Admin))
                {
                    <li class="nav-item">
                        <a class="nav-link text-active-primary me-6 d-flex align-items-center" data-ppc-countup-tabs="true"
                        data-bs-toggle="tab" href="#admin-@user.Id">
                            <i class="bi bi-tools fs-2 text-danger"></i>
                            <span class="d-none d-md-block mr-10">مدیریت</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-active-primary me-6" data-ppc-countup-tabs="true" data-bs-toggle="tab"
                        href="#auth-@user.Id">احراز هویت</a>
                    </li>
               

                <li class="nav-item">
                    <a class="nav-link text-active-primary me-6" data-ppc-countup-tabs="true" data-bs-toggle="tab"
                        href="#info-@user.Id">جزئیات پروفایل</a>
                </li>
 }
                <li class="nav-item">
                    <a class="nav-link text-active-primary me-6" data-ppc-countup-tabs="true" data-bs-toggle="tab"
                        href="#posts-@user.Id">لیست پست ها</a>
                </li>

                @if (user.Id.ToString() == UserId || User.IsInRole(ConstantRoles.Admin))
                {
                    <li class="nav-item">
                        <a class="nav-link text-active-primary me-6" data-ppc-countup-tabs="true" data-bs-toggle="tab"
                        href="#new-@user.Id">ارسال پست جدید</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-active-primary me-6" data-ppc-countup-tabs="true" data-bs-toggle="tab"
                        href="#activity-@user.Id">تاریخچه فعالیت</a>
                    </li>
                }


            </ul>
        </div>
    </div>
</div>
<div class="tab-content">
        @if (User.IsInRole(ConstantRoles.Admin))
    {
        <div class="card mb-5 mb-xl-10 tab-pane fade" id="admin-@user.Id" role="tabpanel">

            <partial name="~/Areas/Dashboard/Views/User/_UserAdminPart.cshtml" model="Model" />

        </div>
 
        <div class="card mb-5 mb-xl-10 tab-pane fade" id="info-@user.Id" role="tabpanel">
            <partial name="~/Areas/Dashboard/Views/User/_UserInfoPart.cshtml" model="Model" />
        </div>


        <div class="card mb-5 mb-xl-10 tab-pane fade" id="auth-@user.Id" role="tabpanel">
            <partial name="~/Areas/Dashboard/Views/User/_UserAuthPart.cshtml" model="Model" />
        </div>
    }

    <div class="card mb-5 mb-xl-10 tab-pane fade" id="posts-@user.Id" role="tabpanel">
        <partial name="~/Areas/Dashboard/Views/User/_UserPostListPart.cshtml" model="Model" />

    </div>

    @if (user.Id.ToString() == UserId || User.IsInRole(ConstantRoles.Admin))
    {
        <div class="card mb-5 mb-xl-10 tab-pane fade" id="new-@user.Id" role="tabpanel">
            <partial name="~/Areas/Dashboard/Views/User/_UserNewPostPart.cshtml" model="Model" />
        </div>


        <div class="card mb-5 mb-xl-10 tab-pane fade" id="activity-@user.Id" role="tabpanel">
            <partial name="~/Areas/Dashboard/Views/User/_UserActivityPart.cshtml" model="Model" />
        </div>

    }


</div>
