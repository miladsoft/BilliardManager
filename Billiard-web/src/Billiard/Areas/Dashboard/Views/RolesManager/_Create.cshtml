@model RoleViewModel
<partial name="_CustomValidationSummary" />
<form asp-action="AddRole" method="post">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @if (string.IsNullOrEmpty(Model?.Id))
                {
                    <h5 class="modal-title">ایجاد یک نقش جدید</h5>
                }
                else
                {
                    <h5 class="modal-title">ویرایش یک نقش</h5>
                }
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>


            <div class="modal-body">
                <div class="form-group row">
                    <label asp-for="Name" class="col-md-3 col-form-label text-md-left"></label>
                    <div class="col-md-9">
                        <input asp-for="Id" />
                        <input dir="ltr" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="submit">ثبت</button>
                <button class="btn btn btn-secondary" data-bs-dismiss="modal" aria-hidden="true">انصراف</button>
            </div>
        </div>
    </div>
</form>
