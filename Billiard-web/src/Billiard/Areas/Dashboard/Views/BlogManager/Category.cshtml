@model PagedListViewModel<BlogPostCategory>

@{
    ViewData["Title"] = "لیست دسته بندی";
}






<div class="d-flex flex-wrap flex-stack my-5">

    <h2 class="fs-2 fw-bold my-2"> @ViewData["Title"]
